<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="theme-color" content="#252525">
<title>Ozidi</title>
<link rel="stylesheet" href="movies-page.css">
<link rel="manifest" href="manifest.json">
<link rel="apple-touch-icon" href="Iconapp.png">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="account.css">


<body>
    <nav>
        <div class="navbar">
            <div class="hamburger-menu" id="menu-toggle">
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
            </div>
            <div class="applogo" id="app-logo">
                <button id="home-button">Ozidi</button>
            </div>
            <button class="profile-icon">
                <a href="/account">
                    <button class="profile-icon">
                        <i class="fa-solid fa-user"></i>
                    </button>
                </a>
                
        </div>
    </nav>
    <div class="main-menu">
        <a href="#" class="nav--buttons" id="home">
            <i class="fa-solid fa-house"></i>Home</a>
        <a href="#" class="nav--buttons" id="movies">
            <i class="fa-solid fa-film"></i>Movies</a>
        <a href="#" class="nav--buttons" id="tv-shows">
            <i class="fa-solid fa-tv"></i>Tv-Shows</a>
        
        <div class="search-container">
            <form id="search-form" class="search-bar">
                <input type="text" name="search" id="search-bar-input" placeholder="Search">
            </form>
        </div>
    </div>
    
    
    <div class="account-mains-wrapper">
        <div class="account-mains">
            <h1> hello, <%= user.name %>!</h1>
            <p>Welcome to your account page.</p>
            <p>Ther's not much to see here right now.</p>
        
        
            <a href="/logout" id="logout-button">Log Out</a>
        </div>
    
    </div>

    <script src="account.js"></script>
</body>