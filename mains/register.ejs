

<link rel="stylesheet" href="register.css">
<meta content="width=device-width, initial-scale=1" name="viewport" />

<body>
    <div class="page-container">

        <div id="page-logo">
            <div id="page-logo-container">
                <img src="Page logo.png" alt="" id="ozidi-logo">
            </div>
        </div>
    
        <div class="register-title">
            <div id="page-title">
                <h1>It's  all here!</h1>
            </div>
            <div id="page-tagline">
                <h3>Join for free and enjoy unlimited movies, TV shows and more.</h3>
            </div>
        </div>
    
    
        <div class="form-wrapper">
            <form action="/register" method="POST" class="email-form">
                    <input type="text" name="name" id="name" placeholder="Name"
                    required>
                    
                    <input type="email" name="email" id="E-Mail" placeholder="E-Mail"
                    required>
        
                    <input type="password" name="password" id="Password" placeholder="Password"
                    required>

            
                <button type="submit" id="register-button">Create Account</button>
            </form>
        </div>
    
        <div id="login">
            <p>Already have an account?</p>
            <div>
                <a href="/login">Login</a>
            </div>
        </div>
    
    </div>

    
</body>